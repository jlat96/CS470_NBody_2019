clean:
	rm -f *.o *.pc cubep3m 

tar_source:
	tar -cvjf source_threads.tar.bz2  *.par *.fh *.f90 *.i Make_PP_THREADS

# use make clean before!!!
tar_code:
	tar -cvjf cubep3m.tar.bz2  -recursive ../../*
